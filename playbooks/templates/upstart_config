description "cryptocards deployment"

start on [2345]
stop on runlevel [!2345]

respawn
setuid nobody
setgid nogroup
chdir /home/ubuntu/cryptocards/cryptomonsters

env SECRET_KEY='{{ secret_key }}'
env DEBUG=''
env IAM_USER_ACCESS_KEY_ID="{{ lookup('ENV', 'IAM_USER_ACCESS_KEY_ID') }}"
env IAM_USER_SECRET_ACCESS_KEY="{{ lookup('ENV', 'IAM_USER_SECRET_ACCESS_KEY') }}"


env DB_NAME='cryptomonsters'
env DB_HOST='cryptomonsters.cz28mdvh5vse.us-west-2.rds.amazonaws.com'
env DB_USER='cryptomonsters'
env DB_PASS='assword1'

exec /home/ubuntu/cryptocards/bin/gunicorn -b :8080 cryptomonsters.wsgi